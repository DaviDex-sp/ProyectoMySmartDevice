@page
@model ProyectoMSD.Pages.Propiedades.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <link href="~/css/pages/propiedades.css" rel="stylesheet" />
}

<div class="main-container">
    <!-- Property Header -->
    <div class="profile-header" style="background: linear-gradient(135deg, #ef4444, #f87171);">
        <div class="d-flex align-items-center">
            <div class="avatar-container me-4" style="position:relative;">
                <div style="width:100px; height:100px; background:rgba(255,255,255,0.2); border:4px solid rgba(255,255,255,0.3); border-radius:20px; display:flex; align-items:center; justify-content:center; font-size:2.5rem; color:white;">
                    <i class="fas fa-home"></i>
                </div>
                <div class="delete-badge">ELIMINAR</div>
            </div>
            <div class="profile-info flex-grow-1">
                <h2 class="mb-2 text-white">@(Model.Propiedade?.Direccion ?? "Propiedad")</h2>
                <div class="profile-status">
                    ⚠️ Confirmación requerida: Eliminar propiedad del sistema
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="form-container" style="border: 1px solid rgba(239,68,68,0.1);">
        <div class="form-header text-center" style="border-bottom-color: #fef2f2;">
            <h3 style="color: #ef4444; justify-content: center;">
                <i class="fas fa-building"></i>
                Eliminar Propiedad
            </h3>
            <p>Confirma la eliminación permanente de esta propiedad del sistema</p>
        </div>

        <div class="alert alert-danger" style="border-left: 4px solid #ef4444; text-align: center;">
            <h5 class="fw-bold mb-2"><i class="fas fa-exclamation-triangle me-2"></i>¡Atención! Esta acción eliminará toda la propiedad</h5>
            <p class="mb-0">Una vez eliminada, toda la información de la propiedad, incluyendo espacios asociados y configuraciones, se perderá permanentemente.</p>
        </div>

        <!-- Property Details Cards -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="info-card" style="border-top: 4px solid #ef4444; text-align: left;">
                    <div class="d-flex align-items-center mb-2">
                        <div style="width:40px; height:40px; background:linear-gradient(135deg, #ef4444, #f87171); border-radius:10px; display:flex; align-items:center; justify-content:center; color:white; margin-right:0.75rem;">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <small class="text-muted text-uppercase fw-bold">Dirección</small>
                    </div>
                    <div class="fw-bold">@Html.DisplayFor(model => model.Propiedade.Direccion)</div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="info-card" style="border-top: 4px solid #ef4444; text-align: left;">
                    <div class="d-flex align-items-center mb-2">
                        <div style="width:40px; height:40px; background:linear-gradient(135deg, #ef4444, #f87171); border-radius:10px; display:flex; align-items:center; justify-content:center; color:white; margin-right:0.75rem;">
                            <i class="fas fa-home"></i>
                        </div>
                        <small class="text-muted text-uppercase fw-bold">Tipo de Propiedad</small>
                    </div>
                    <div class="fw-bold">@Html.DisplayFor(model => model.Propiedade.Tipo)</div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="info-card" style="border-top: 4px solid #ef4444; text-align: left;">
                    <div class="d-flex align-items-center mb-2">
                        <div style="width:40px; height:40px; background:linear-gradient(135deg, #ef4444, #f87171); border-radius:10px; display:flex; align-items:center; justify-content:center; color:white; margin-right:0.75rem;">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <small class="text-muted text-uppercase fw-bold">Número de Pisos</small>
                    </div>
                    <div class="fw-bold">@Html.DisplayFor(model => model.Propiedade.Pisos) pisos</div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="info-card" style="border-top: 4px solid var(--primary-blue, #3b82f6); background: linear-gradient(135deg, #eff6ff, #dbeafe); text-align: left;">
                    <div class="d-flex align-items-center mb-2">
                        <div style="width:40px; height:40px; background:linear-gradient(135deg, var(--primary-blue, #3b82f6), var(--secondary-blue, #60a5fa)); border-radius:10px; display:flex; align-items:center; justify-content:center; color:white; margin-right:0.75rem;">
                            <i class="fas fa-user"></i>
                        </div>
                        <small class="text-muted text-uppercase fw-bold">Propietario</small>
                    </div>
                    <div class="fw-bold">
                        @if (Model.Propiedade?.IdUsuariosNavigation != null)
                        {
                            @Model.Propiedade.IdUsuariosNavigation.Nombre
                        }
                        else
                        {
                            <span class="text-muted">Usuario ID: @Model.Propiedade?.IdUsuarios</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Section -->
        <div style="background: #f8fafc; border-radius: 15px; padding: 2rem; text-align: center;">
            <h5 class="mb-4 text-dark">¿Continuar con la eliminación?</h5>
            <form method="post" style="display: inline;">
                <input type="hidden" asp-for="Propiedade.Id" />
                <div class="d-flex justify-content-center align-items-center flex-wrap gap-3">
                    <a asp-page="./Index" class="btn-secondary-custom">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar y Volver
                    </a>
                    <button type="submit" class="btn-danger-custom" onclick="return confirm('¿Estás absolutamente seguro de eliminar esta propiedad? Esta acción NO se puede deshacer y eliminará todos los espacios asociados.');">
                        <i class="fas fa-trash-alt me-2"></i>Sí, Eliminar Propiedad
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Card hover effects
    document.querySelectorAll('.info-card').forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-5px) scale(1.02)';
        });
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
</script>