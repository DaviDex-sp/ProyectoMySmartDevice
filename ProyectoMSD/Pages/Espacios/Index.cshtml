@page
@model ProyectoMSD.Pages.Espacios.IndexModel

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link href="~/css/pages/espacios.css" rel="stylesheet" />
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-2 fw-bold">ESPACIOS</h1>
            <p class="text-muted mb-0">Organiza tus dispositivos por habitaciones</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-page="Create" class="btn btn-dark">
                <i class="fas fa-plus me-2"></i>Agregar Espacio
            </a>
        }
    </div>

    <!-- Spaces Grid -->
    <div class="row">
        @if (Model.Espacio != null && Model.Espacio.Any())
        {
            @foreach (var espacio in Model.Espacio)
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="space-card">
                        <!-- Card Header -->
                        <div class="card-header-custom">
                            <div>
                                <h3 class="space-title">@espacio.Nombre</h3>
                                <div class="property-info">
                                    @if (espacio.IdPropiedadesNavigation != null)
                                    {
                                        <span class="property-badge">
                                            <i class="fas fa-home me-1"></i>
                                            Propiedad: @espacio.IdPropiedadesNavigation.Direccion
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="property-badge">
                                            <i class="fas fa-home me-1"></i>
                                            Propiedad ID: @espacio.IdPropiedades
                                        </span>
                                    }
                                </div>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="action-buttons">
                                    <a asp-page="./Edit" asp-route-id="@espacio.Id" class="action-btn edit-btn" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@espacio.Id" class="action-btn delete-btn" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            }
                        </div>
                        <!-- Device Stats -->
                        <div class="device-stats">
                            <div class="stat-item">
                                <i class="fas fa-microchip text-danger"></i>
                                <span>Dispositivos</span>
                            </div>
                            <div class="stat-item">
                                @{
                                    var rand = new Random(espacio.Id);
                                    int activos = rand.Next(1, 3);
                                }
                                <span class="badge bg-danger">@activos Inactivos</span>
                            </div>
                            <div class="stat-item">
                                <span class="badge bg-primary">@Model.TotalDispositivos Dispositivos</span>
                            </div>
                        </div>

                        <div class="devices-section">
                            <div class="devices-title">Dispositivos disponibles</div>

                            @{
                                var todosDispositivos = Model.GetTodosLosDispositivos();
                            }

                            @if (todosDispositivos.Any())
                            {
                                @foreach (var dispositivo in todosDispositivos)
                                {
                                    var isActive = dispositivo.Estado.ToLower().Contains("activo") ||
                                    dispositivo.Estado.ToLower().Contains("encendido") ||
                                    dispositivo.Estado.ToLower().Contains("en uso") ||
                                    dispositivo.Estado.ToLower().Contains("trabajando") ||
                                    dispositivo.Estado.ToLower().Contains("reposo") ||
                                    dispositivo.Estado.ToLower().Contains("on");

                                    string iconClass = "fas fa-microchip";
                                    string colorClass = isActive ? "text-secondary" : "text-danger";

                                    if (dispositivo.Tipo.ToLower().Contains("termostato"))
                                    {
                                        iconClass = "fas fa-thermometer-half";
                                        colorClass = isActive ? "text-danger" : "text-muted";
                                    }
                                    else if (dispositivo.Tipo.ToLower().Contains("luz"))
                                    {
                                        iconClass = "fas fa-lightbulb";
                                        colorClass = isActive ? "text-warning" : "text-danger";
                                    }
                                    else if (dispositivo.Tipo.ToLower().Contains("camara"))
                                    {
                                        iconClass = "fas fa-camera";
                                        colorClass = isActive ? "text-info" : "text-danger";
                                    }
                                    else if (dispositivo.Tipo.ToLower().Contains("sensor"))
                                    {
                                        iconClass = "fas fa-eye";
                                        colorClass = isActive ? "text-primary" : "text-danger";
                                    }
                                    else if (dispositivo.Tipo.ToLower().Contains("altavoz"))
                                    {
                                        iconClass = "fas fa-volume-up";
                                        colorClass = isActive ? "text-success" : "text-danger";
                                    }
                                    else if (dispositivo.Tipo.ToLower().Contains("television") || dispositivo.Tipo.ToLower().Contains("tv"))
                                    {
                                        iconClass = "fas fa-tv";
                                        colorClass = isActive ? "text-dark" : "text-danger";
                                    }

                                    <div class="device-item @(isActive ? "" : "device-inactive")">
                                        <div class="device-info">
                                            <div class="device-icon">
                                                <i class="@iconClass @colorClass"></i>
                                            </div>
                                            <span class="device-name @(isActive ? "" : "text-muted")">@dispositivo.Nombre</span>
                                        </div>
                                        <div class="device-status">
                                            <span class="status-badge @(isActive ? "status-on" : "status-off")">
                                                @dispositivo.Estado.ToUpper()
                                            </span>
                                            <div class="status-indicator @(isActive ? "indicator-on" : "indicator-off")"></div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No hay dispositivos creados en el sistema</p>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-home fa-4x mb-4 text-muted opacity-50"></i>
                    <h4 class="mb-3">No hay espacios registrados</h4>
                    <p class="mb-4 text-muted">Comienza agregando el primer espacio a tu hogar inteligente.</p>
                    <a asp-page="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Crear Primer Espacio
                    </a>
                </div>
            </div>
        }
    </div>
</div>