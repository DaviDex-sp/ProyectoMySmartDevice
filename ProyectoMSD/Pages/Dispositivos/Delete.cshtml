@page
@model ProyectoMSD.Pages.Dispositivos.DeleteModel

@{
    ViewData["Title"] = "Eliminar Dispositivo";
}

@section Styles {
    <link href="~/css/pages/dispositivos.css" rel="stylesheet" />
}

<div class="main-container" style="max-width: 900px;">
    <!-- Danger Header -->
    <div class="profile-header" style="background: linear-gradient(135deg, #dc3545, #b02a37);">
        <div class="d-flex align-items-center">
            <div class="position-relative me-4">
                <div class="device-icon" style="width:100px; height:100px; background:rgba(255,255,255,0.2); border:4px solid rgba(255,255,255,0.3); border-radius:20px; display:flex; align-items:center; justify-content:center; font-size:2.5rem; color:white;">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="delete-badge">ELIMINAR</div>
            </div>
            <div class="flex-grow-1">
                <h2 class="mb-2 text-white">¿Eliminar Dispositivo?</h2>
                <div class="profile-status">
                    <strong>¡ATENCIÓN!</strong> Esta acción no se puede deshacer
                </div>
            </div>
        </div>
    </div>

    <!-- Warning Section -->
    <div class="form-container" style="border: 1px solid rgba(220,53,69,0.2);">
        <div class="form-header" style="border-bottom-color: rgba(220,53,69,0.2);">
            <h3 style="color: #dc3545;">
                <i class="fas fa-exclamation-circle"></i>
                Confirmación de Eliminación
            </h3>
        </div>

        <div class="alert alert-danger" style="border-left: 4px solid #dc3545;">
            <strong>¿Estás seguro de que quieres eliminar este dispositivo?</strong><br>
            Esta acción eliminará permanentemente toda la información del dispositivo del sistema.
        </div>

        <!-- Device Details -->
        <div style="background: #f8f9fa; border-radius: 15px; padding: 1.5rem; margin-bottom: 2rem;">
            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div class="fw-bold"><i class="fas fa-tag me-2 text-danger"></i>Nombre</div>
                <div class="text-muted bg-white px-3 py-1 rounded border">@Html.DisplayFor(model => model.Dispositivo.Nombre)</div>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div class="fw-bold"><i class="fas fa-list me-2 text-danger"></i>Tipo</div>
                <div class="text-muted bg-white px-3 py-1 rounded border">@Html.DisplayFor(model => model.Dispositivo.Tipo)</div>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div class="fw-bold"><i class="fas fa-tasks me-2 text-danger"></i>Usos</div>
                <div class="text-muted bg-white px-3 py-1 rounded border">@Html.DisplayFor(model => model.Dispositivo.Usos)</div>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div class="fw-bold"><i class="fas fa-industry me-2 text-danger"></i>Marca</div>
                <div class="text-muted bg-white px-3 py-1 rounded border">@Html.DisplayFor(model => model.Dispositivo.Marca)</div>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2">
                <div class="fw-bold"><i class="fas fa-check-circle me-2 text-danger"></i>Estado</div>
                <div class="text-muted bg-white px-3 py-1 rounded border">@Html.DisplayFor(model => model.Dispositivo.Estado)</div>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Dispositivo.Id" />
            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-page="./Index" class="btn-secondary-custom">
                    <i class="fas fa-arrow-left me-2"></i>Cancelar
                </a>
                <button type="submit" class="btn-danger-custom" onclick="return confirm('¿Estás completamente seguro? Esta acción no se puede deshacer.')">
                    <i class="fas fa-trash me-2"></i>Confirmar Eliminación
                </button>
            </div>
        </form>
    </div>
</div>
