@page
@model ProyectoMSD.Pages.Dispositivos.DetailsModel

@{
    ViewData["Title"] = "Detalles del Dispositivo";
}

@section Styles {
    <link href="~/css/pages/dispositivos.css" rel="stylesheet" />
}

<div class="main-container" style="max-width: 800px;">
    <div class="form-container">
        <!-- Header -->
        <div class="device-header" style="text-align:center; margin-bottom: 2rem; padding: 2rem; border-radius: 20px;">
            <div class="device-icon" style="width:80px; height:80px; background: var(--primary-blue, #4a90e2); border-radius:50%; display:flex; align-items:center; justify-content:center; font-size:2rem; color:white; margin:0 auto 1rem;">
                <i class="fas fa-mobile-alt"></i>
            </div>
            <h1 class="fw-bold" style="color: var(--primary-blue, #4a90e2);">@Html.DisplayFor(model => model.Dispositivo.Nombre)</h1>
            <p class="text-muted">Información completa del dispositivo</p>
        </div>

        <!-- Detalles -->
        <div class="device-details">
            <div class="detail-row d-flex justify-content-between align-items-center py-3 border-bottom">
                <div class="detail-label fw-bold"><i class="fas fa-tag me-2 text-primary"></i>Nombre</div>
                <div class="detail-value text-muted">@Html.DisplayFor(model => model.Dispositivo.Nombre)</div>
            </div>
            <div class="detail-row d-flex justify-content-between align-items-center py-3 border-bottom">
                <div class="detail-label fw-bold"><i class="fas fa-list me-2 text-primary"></i>Tipo</div>
                <div class="detail-value text-muted">@Html.DisplayFor(model => model.Dispositivo.Tipo)</div>
            </div>
            <div class="detail-row d-flex justify-content-between align-items-center py-3 border-bottom">
                <div class="detail-label fw-bold"><i class="fas fa-tasks me-2 text-primary"></i>Usos</div>
                <div class="detail-value text-muted">@Html.DisplayFor(model => model.Dispositivo.Usos)</div>
            </div>
            <div class="detail-row d-flex justify-content-between align-items-center py-3 border-bottom">
                <div class="detail-label fw-bold"><i class="fas fa-industry me-2 text-primary"></i>Marca</div>
                <div class="detail-value text-muted">@Html.DisplayFor(model => model.Dispositivo.Marca)</div>
            </div>
            <div class="detail-row d-flex justify-content-between align-items-center py-3">
                <div class="detail-label fw-bold"><i class="fas fa-check-circle me-2 text-primary"></i>Estado</div>
                <div class="detail-value text-muted">@Html.DisplayFor(model => model.Dispositivo.Estado)</div>
            </div>
        </div>

        <!-- Botón Volver -->
        <div class="text-center mt-4">
            <a asp-page="./Index" class="btn-secondary-custom">
                <i class="fas fa-arrow-left me-2"></i>Volver a la lista
            </a>
        </div>
    </div>
</div>
