@page
@model ProyectoMSD.Pages.Dispositivos.EditModel

@{
    ViewData["Title"] = "Editar Dispositivo";
}

@section Styles {
    <link href="~/css/pages/dispositivos.css" rel="stylesheet" />
}

<div class="main-container">
    <!-- Device Header -->
    <div class="device-header">
        <div class="d-flex align-items-center">
            <div class="device-icon-container me-4">
                <div class="device-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <div class="edit-badge">EDITAR</div>
            </div>
            <div class="device-info flex-grow-1">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h2 class="mb-2">@(Model.Dispositivo?.Nombre ?? "Dispositivo")</h2>
                        <div class="device-status">
                            En progreso: Editando información del dispositivo
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Cards -->
    <div class="info-cards">
        <div class="info-card">
            <div class="info-card-icon">
                <i class="fas fa-tag"></i>
            </div>
            <div class="info-card-value">@(Model.Dispositivo?.Nombre ?? "N/A")</div>
            <div class="info-card-label">Nombre Actual</div>
        </div>
        <div class="info-card">
            <div class="info-card-icon">
                <i class="fas fa-list"></i>
            </div>
            <div class="info-card-value">@(Model.Dispositivo?.Tipo ?? "N/A")</div>
            <div class="info-card-label">Tipo</div>
        </div>
        <div class="info-card">
            <div class="info-card-icon">
                <i class="fas fa-industry"></i>
            </div>
            <div class="info-card-value">@(Model.Dispositivo?.Marca ?? "N/A")</div>
            <div class="info-card-label">Marca</div>
        </div>
        <div class="info-card">
            <div class="info-card-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="info-card-value">@(Model.Dispositivo?.Estado ?? "N/A")</div>
            <div class="info-card-label">Estado</div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        <!-- Form Section -->
        <div class="form-container">
            <div class="form-header">
                <h3>
                    <i class="fas fa-edit"></i>
                    Información del Dispositivo
                </h3>
                <p>Actualiza los datos del dispositivo en el sistema</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Dispositivo.Id" />

                <div class="form-grid">
                    <div class="form-group form-grid-full">
                        <label class="form-label">
                            <i class="fas fa-tag me-1 text-primary"></i>Nombre del Dispositivo
                        </label>
                        <input asp-for="Dispositivo.Nombre" class="form-control" placeholder="Ingresa el nombre del dispositivo" />
                        <span asp-validation-for="Dispositivo.Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-list me-1 text-primary"></i>Tipo de Dispositivo
                        </label>
                        <input asp-for="Dispositivo.Tipo" class="form-control" placeholder="Ej: Smartphone, Tablet" />
                        <span asp-validation-for="Dispositivo.Tipo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-tasks me-1 text-primary"></i>Usos
                        </label>
                        <input asp-for="Dispositivo.Usos" class="form-control" placeholder="Ej: Personal, Trabajo" />
                        <span asp-validation-for="Dispositivo.Usos" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-industry me-1 text-primary"></i>Marca
                        </label>
                        <input asp-for="Dispositivo.Marca" class="form-control" placeholder="Ej: Apple, Samsung" />
                        <span asp-validation-for="Dispositivo.Marca" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-check-circle me-1 text-primary"></i>Estado
                        </label>
                        <input asp-for="Dispositivo.Estado" class="form-control" placeholder="Ej: Nuevo, Usado" />
                        <span asp-validation-for="Dispositivo.Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="./Index" class="btn-secondary-custom">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                    </a>
                    <button type="submit" class="btn-primary-custom">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>

        <!-- Activity Sidebar -->
        <div class="activity-sidebar">
            <div class="activity-header">Actividad Reciente</div>

            <div class="activity-item">
                <div class="activity-status">En progreso</div>
                <div class="activity-title">Editando dispositivo</div>
                <a href="#" class="activity-action">Ver detalles</a>
            </div>

            <div class="activity-item">
                <div class="activity-status">Hace 20 minutos</div>
                <div class="activity-title">Dispositivo actualizado</div>
                <div class="activity-action">Sistema</div>
            </div>

            <div class="activity-item">
                <div class="activity-status">Hace 2 horas</div>
                <div class="activity-title">Estado modificado</div>
                <div class="activity-action">Configuración</div>
            </div>
        </div>
    </div>
</div>

<script>
    // Form enhancements - actualizar info cards dinámicamente
    document.querySelector('input[name="Dispositivo.Nombre"]')?.addEventListener('input', function() {
        const card = document.querySelector('.info-card:nth-child(1) .info-card-value');
        card.textContent = this.value || 'N/A';
    });

    document.querySelector('input[name="Dispositivo.Tipo"]')?.addEventListener('input', function() {
        const card = document.querySelector('.info-card:nth-child(2) .info-card-value');
        card.textContent = this.value || 'N/A';
    });

    document.querySelector('input[name="Dispositivo.Marca"]')?.addEventListener('input', function() {
        const card = document.querySelector('.info-card:nth-child(3) .info-card-value');
        card.textContent = this.value || 'N/A';
    });

    document.querySelector('input[name="Dispositivo.Estado"]')?.addEventListener('input', function() {
        const card = document.querySelector('.info-card:nth-child(4) .info-card-value');
        card.textContent = this.value || 'N/A';
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
