@page
@model ProyectoMSD.Pages.Usuarios.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <link href="~/css/pages/usuarios.css" rel="stylesheet" />
}

<div class="main-container usuarios-delete">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="d-flex align-items-center">
            <div class="avatar-container me-4">
                <div class="avatar-lg">
                    @(Model.Usuario?.Nombre?.Substring(0, 1).ToUpper() ?? "U")
                </div>
                <div class="delete-badge">ELIMINAR</div>
            </div>
            <div class="profile-info flex-grow-1">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h2 class="mb-2">@(Model.Usuario?.Nombre ?? "Usuario")</h2>
                        <div class="profile-status">
                            ⚠️ Confirmación requerida: Eliminar usuario del sistema
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        <!-- Delete Section -->
        <div class="delete-container">
            <div class="delete-header">
                <h3>
                    <i class="fas fa-user-times"></i>
                    Eliminar Usuario
                </h3>
                <p>Confirma la eliminación permanente de este usuario del sistema</p>
            </div>

            <div class="warning-box">
                <h4>
                    <i class="fas fa-exclamation-triangle"></i>
                    ¡Atención! Esta acción es irreversible
                </h4>
                <p>Una vez eliminado, toda la información del usuario se perderá permanentemente y no podrá ser recuperada.</p>
            </div>

            <div class="user-info">
                <h5 class="mb-3 text-dark fw-bold">Información del usuario a eliminar:</h5>

                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-user"></i>
                            Nombre
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Nombre)</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-user-tag"></i>
                            Rol
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Rol)</div>
                    </div>

                    <div class="info-item info-item-full">
                        <div class="info-label">
                            <i class="fas fa-envelope"></i>
                            Correo
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Correo)</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-phone"></i>
                            Teléfono
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Telefono)</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-map-marker-alt"></i>
                            Ubicación
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Ubicacion)</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-id-card"></i>
                            Documento
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Documento)</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-building"></i>
                            RUT
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Rut)</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-shield-alt"></i>
                            Permisos
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Permisos)</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-toggle-on"></i>
                            Estado
                        </div>
                        <div class="info-value">@Html.DisplayFor(model => model.Usuario.Acesso)</div>
                    </div>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Usuario.Id" />
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="./Index" class="btn-secondary-custom">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar y Volver
                    </a>
                    <button type="submit" class="btn-danger-custom" onclick="return confirm('¿Estás absolutamente seguro de eliminar este usuario? Esta acción NO se puede deshacer.');">
                        <i class="fas fa-trash-alt me-2"></i>Sí, Eliminar Usuario
                    </button>
                </div>
            </form>
        </div>

        <!-- Activity Sidebar - Warnings -->
        <div class="activity-sidebar">
            <div class="activity-header">Advertencias Importantes</div>

            <div class="activity-item">
                <div class="activity-status">Crítico</div>
                <div class="activity-title">Eliminación permanente</div>
                <div class="activity-action">No se puede recuperar</div>
            </div>

            <div class="activity-item">
                <div class="activity-status">Importante</div>
                <div class="activity-title">Datos relacionados</div>
                <div class="activity-action">Pueden perderse</div>
            </div>

            <div class="activity-item">
                <div class="activity-status">Atención</div>
                <div class="activity-title">Accesos del sistema</div>
                <div class="activity-action">Se revocarán</div>
            </div>

            <div class="activity-item">
                <div class="activity-status">Recomendación</div>
                <div class="activity-title">Crear respaldo</div>
                <div class="activity-action">Antes de eliminar</div>
            </div>

            <div class="activity-item">
                <div class="activity-status">Alternativa</div>
                <div class="activity-title">Desactivar usuario</div>
                <div class="activity-action">En lugar de eliminar</div>
            </div>
        </div>
    </div>
</div>
